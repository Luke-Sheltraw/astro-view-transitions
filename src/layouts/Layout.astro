---
import { ViewTransitions } from 'astro:transitions';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{ title }</title>
		<ViewTransitions />
	</head>
	<body>
		<aside>
			<header>
				<a href="/">
					<h1>WebDev</h1>
				</a>
			</header>
			<nav>
				<ul>
					<li>
						<a href="/terms">Terms</a>
						<ul>
							<li><a href="/terms/meta">Meta</a></li>
							<li><a href="/terms/html">HTML</a></li>
							<li><a href="/terms/css">CSS</a></li>
							<li><a href="/terms/javascript">JavaScript</a></li>
						</ul>
					</li>
				</ul>
			</nav>
		</aside>
		<main>
			<slot />
		</main>
	</body>
</html>

<style is:global>
	html {
		font-family: system-ui, sans-serif;
		background: #ffffff;
	}

	* {
		box-sizing: border-box;
	}

	h1, h2, h3, h4, h5, h6 {
		margin: 0;
	}
</style>

<style>
	body {
		display: flex;
		margin: 0;
	}

	main {
		flex: 1;
		padding: 1rem;
	}

	aside {
		width: 10rem;
		height: 100vh;
		padding: 1rem;
		border-right: 1px solid gray;
	}

	header {
		margin-bottom: 1rem;
	}

	header a {
		text-decoration: none;
		color: inherit;
	}

	nav ul {
		margin: 0;
		padding: 0;
		list-style-type: none;
	}

	nav ul li:not(:last-of-type) {
		margin-bottom: 0.25rem;
	}

	nav ul ul {
		margin: 0.5rem 0 0 1rem;
	}

	nav a {
		color: rgb(136, 0, 255);
	}

	nav a:hover {
		text-decoration: underline;
	}
</style>
